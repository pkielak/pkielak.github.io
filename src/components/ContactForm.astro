---
const WEB_3_FORMS_KEY = import.meta.env.WEB_3_FORMS_KEY;
---

<form id="form" action="https://api.web3forms.com/submit" method="POST">
    <input type="hidden" name="access_key" value={WEB_3_FORMS_KEY} />
    <div class="small-inputs">
        <div>
            <label for="name">First Name</label>
            <input
                type="text"
                id="name"
                name="name"
                placeholder="First name"
                required
            />
        </div>

        <div>
            <label for="email">Email</label>
            <input
                id="email"
                type="email"
                name="email"
                inputmode="email"
                placeholder="Email Address"
                required
            />
        </div>
    </div>
    <div>
        <label for="message">Message</label>
        <textarea
            id="message"
            name="message"
            rows="6"
            placeholder="Message"
            required></textarea>
    </div>
    <button type="submit">Submit</button>
</form>

<style>
    form {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    input,
    textarea {
        padding: 0.5rem 0.75rem;
        border: var(--dashed-border4);
        border-radius: 0;
        background-color: var(--nord0-polar-night);
        color: var(--nord4-snow-storm);
        font-weight: normal;
        transition: border 0.2s;
    }

    input:focus-visible,
    textarea:focus-visible {
        outline: none;
        border: var(--dashed-border8);
    }

    input::placeholder,
    textarea::placeholder {
        color: #d8dee995;
        font-weight: 300;
    }

    textarea {
        width: 100%;
        box-sizing: border-box;
        resize: none;
    }

    button {
        font-family: "IBM Plex Mono";
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        width: 50%;
        background:;
        border: none;
        margin: 0 auto;
        padding: 0.5rem 0.75rem;
        color: var(--nord4-snow-storm);
        font-size: 1.25rem;
        font-weight: 700;
        cursor: pointer;
        background:
            linear-gradient(90deg, var(--nord10-frost) 50%, transparent 0)
                repeat-x,
            linear-gradient(90deg, var(--nord10-frost) 50%, transparent 0)
                repeat-x,
            linear-gradient(0deg, var(--nord10-frost) 50%, transparent 0)
                repeat-y,
            linear-gradient(0deg, var(--nord10-frost) 50%, transparent 0)
                repeat-y;
        background-size:
            4px 2px,
            4px 2px,
            2px 4px,
            2px 4px;
        background-position:
            0 0,
            0 100%,
            0 0,
            100% 0;
    }

    button:hover {
        animation: borderMove 0.3s infinite linear;
        color: var(--nord10-frost);
    }

    @keyframes borderMove {
        100% {
            background-position:
                4px 0,
                -4px 100%,
                0 -4px,
                100% 4px;
        }
    }

    .small-inputs {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .small-inputs > div {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    @media (min-width: 768px) {
        .small-inputs > div {
            width: calc(50% - 0.5rem);
        }
    }
</style>
