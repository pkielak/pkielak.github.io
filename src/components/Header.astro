---
// import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
    <nav>
        <div class="title">
            <h2><a href="/">{SITE_TITLE}</a></h2>
        </div>
        <div class="internal-links">
            <!-- <HeaderLink href="/about">About</HeaderLink> -->
        </div>
    </nav>
</header>
<style>
    header {
        position: absolute;
        top: 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        z-index: 999;
        color: var(--nord4-snow-storm);
        border-radius: 0;
    }

    h2 {
        margin: 0 0 0 3rem;
        font-size: 2rem;
        line-height: 1;
        font-weight: 700;
        text-transform: lowercase;
    }
    h2 a {
        text-decoration: none;
        text-shadow: 1px 1px 0 var(--nord3-polar-night);
        color: var(--nord4-snow-storm);
        user-select: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
        width: 100%;
        margin: auto;
    }
    nav a {
        color: var(--nord4-snow-storm);
        font-weight: 600;
        text-decoration: none;
        pointer-events: initial;
        transition: color 0.2s ease;
    }
    nav a.active {
        color: var(--nord14-aurora);
        text-decoration: none;
    }
    nav a:hover {
        color: var(--nord14-aurora);
    }
</style>
