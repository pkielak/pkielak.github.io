---
import Main from "../layouts/Main.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import ContactForm from "../components/ContactForm.astro";
import Earth from "../components/Earth.astro";
import Rocket from "../components/Rocket.astro";
import CurvedText from "../components/CurvedText.astro";

const posts = (await getCollection("notes"))
    .sort((a, b) => {
        const aDate = a.data.updatedAt || a.data.pubDate;
        const bDate = b.data.updatedAt || b.data.pubDate;
        return bDate.valueOf() - aDate.valueOf();
    })
    .slice(0, 5);
---

<Main title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <Earth />
    <Rocket />

    <section>
        <div class="photo earth--move">
            <img src="/avatar.png" alt="portrait of me in spacesuit" />
            <h3>Hello! I'm Piotr Kielak</h3>
            <p>
                I'm a front-end developer with a few years of experience in web
                development and I enjoy sharing my thoughts through this digital
                garden project.
            </p>
            <p>
                If you're interested in the structure or exploring different
                parts of my digital garden, check the node diagram below or jump
                straight in{" "}
                <a href="/notes/index">here</a>!
            </p>
        </div>
    </section>
    <section>
        <div class="planet">
            <p>
                My main focus as a developer is building useful applications and
                websites tailored for daily users tasks. Some of my earlier
                projects have succeeded in this, which motivates me to keep
                creating great solutions.
            </p>
            <p>
                Skilled in React and TypeScript, I'm learning Next.js, Astro,
                PostgreSQL, and AI agents to expand my full-stack development
                skills.
            </p>
            <CurvedText />
        </div>
    </section>
    <section>
        <div class="planet">
            <h3>Recent notes</h3>
        </div>
    </section>
    {
        posts.map((post) => (
            <section>
                <div class="planet">
                    <a href={`/notes/${post.id}/`} class="post">
                        <h4 class="title">{post.data.title}</h4>
                        <p class="date">
                            <FormattedDate
                                date={post.data.updatedAt || post.data.pubDate}
                            />
                        </p>
                        <p class="description">{post.data.description}</p>
                    </a>
                </div>
            </section>
        ))
    }
    <section>
        <div class="planet">
            <h3>Contact Me</h3>
            <ContactForm />
        </div>
    </section>
</Main>

<style>
    h3 {
        font-size: 1.563em;
        text-align: center;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    section {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: calc(100% - 2rem);
        max-width: 1024px;
        height: 100svh;
        margin: 0 auto;
        scroll-snap-align: start;
        z-index: 200;
    }

    section:nth-of-type(2),
    section:last-of-type {
        width: 125%;
        left: 50%;
        transform: translateX(-50%);
    }

    section:not(:nth-of-type(2), :last-of-type):has(.planet) {
        margin-top: 2rem;
        height: auto;
    }

    .photo,
    .planet {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        flex: 0 1 auto;
        max-width: 100%;
        min-width: 0;
        background: var(--nord0-polar-night);
        color: var(--nord4-snow-storm);
        font-weight: 400;
        z-index: 999;
    }

    .photo,
    .photo img {
        border: var(--dashed-border4);
    }

    .photo img {
        width: 75%;
    }

    .planet {
        position: relative;
        transition:
            opacity 1.2s ease-in-out,
            transform 1.2s ease-in-out;
        border-radius: 50%;
        padding: 1rem 2rem;
        aspect-ratio: 1;
        z-index: 0;
        opacity: 0;
        border-width: 3px !important;
    }

    .planet * {
        margin: 0;
    }

    section:nth-of-type(2) .planet,
    section:nth-of-type(9) .planet {
        border: var(--dashed-border9);
    }
    section:nth-of-type(3) .planet {
        border: var(--dashed-border11);
    }
    section:nth-of-type(4) .planet {
        border: var(--dashed-border14);
    }
    section:nth-of-type(5) .planet {
        border: var(--dashed-border12);
    }
    section:nth-of-type(6) .planet,
    section:nth-of-type(7) .planet {
        border: var(--dashed-border8);
    }
    section:nth-of-type(8) .planet {
        border: var(--dashed-border13);
    }

    section:nth-of-type(even) .planet {
        transform-origin: 50% -300vh;
        transform: rotate(15deg);
    }

    section:nth-of-type(odd) .planet {
        transform-origin: 50% -300vh;
        transform: rotate(-15deg);
    }

    section .planet.visible {
        transform: rotate(0);
        opacity: 1;
    }

    section:nth-of-type(2) .planet,
    section:last-of-type .planet {
        padding: 1rem 4rem;
    }

    .planet .curvedTextWrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 99;
        user-select: none;
        pointer-events: none;
    }

    @keyframes rotate {
        from {
            transform: translate(-50%, -50%) rotate(0deg);
        }

        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }

    .post {
        display: block;
        text-decoration: none;
        font-weight: 400;
        border-radius: 0;
        transition: color 0.2s ease;
    }

    .post:hover h4,
    .post:hover .date {
        color: var(--nord10-frost);
    }

    .title {
        margin: 0;
        line-height: 1;
    }

    .date,
    .description {
        margin: 0;
        color: var(--nord3-snow-storm);
    }

    @media (min-width: 720px) {
        h3 {
            font-size: 1.953em;
        }

        ul {
            gap: 0.5em;
        }

        ul li:first-child .title {
            font-size: 1.563em;
        }
    }

    @media (min-width: 768px) {
        section {
            height: 100vh;
        }

        section:nth-of-type(odd) {
            justify-content: flex-end;
        }

        section:nth-of-type(even) {
            justify-content: flex-start;
        }

        section:nth-of-type(1) {
            justify-content: center;
        }

        section:not(:nth-of-type(2), :last-of-type):has(.planet) {
            height: 33vh;
            margin-top: 0;
        }

        section:nth-of-type(2),
        section:last-of-type {
            width: initial;
            left: initial;
            transform: initial;
        }

        .planet {
            padding: 2rem;
            max-width: 448px;
        }

        section:last-of-type .planet {
            max-width: unset;
        }

        .photo {
            width: 50%;
            max-width: unset;
        }

        .photo img {
            width: 100%;
            border-width: 2px;
            border-color: var(--nord4-snow-storm);
            border-style: dashed;
        }
    }
</style>

<script type="module" is:inline data-astro-rerun>
    (() => {
        let observer = null;

        function onPlanetVisible(entries) {
            entries.forEach((entry) => {
                const planet = entry.target.querySelector(".planet");
                if (!planet) return;

                if (entry.isIntersecting) {
                    planet.classList.add("visible");
                } else {
                    planet.classList.remove("visible");
                }
            });
        }

        function detachObserver(sections) {
            if (observer) {
                sections.forEach((section) => observer?.unobserve(section));
                observer = null;
            }
        }

        function init() {
            const sections = document.querySelectorAll(
                "section:not(section:first-child)",
            );

            detachObserver(sections);
            observer = new IntersectionObserver(onPlanetVisible, {
                root: null,
                rootMargin: "0px",
                threshold: 0.05,
            });

            sections.forEach((section) => observer?.observe(section));
        }

        document.addEventListener("astro:page-load", init);
    })();
</script>
