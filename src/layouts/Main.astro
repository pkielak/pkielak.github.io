---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import NetworkGraph from "../components/NetworkGraph";

const graph = await import("../pages/graph.json");
const graphData = await graph.GET({}).then((response) => response.json());

interface Props {
    title: string;
    description: string;
    isGraphSmall?: boolean;
}

const { title, description } = Astro.props;
const today = new Date();
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <div class="graph-wrapper">
            <span class="zoom-control-text">Hold Ctrl + Scroll to Zoom</span>
            <NetworkGraph
                graphData={graphData}
                client:idle
                transition:persist
            />
        </div>
        <footer>
            <span>
                &copy; {today.getFullYear()} pkielak | <a href="/privacy"
                    >Privacy policy</a
                >
            </span>
        </footer>
    </body>
</html>

<style>
    @keyframes reveal {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .graph-wrapper {
        width: 100%;
        height: 75vh;
        position: relative;
    }

    .zoom-control-text {
        position: absolute;
        top: 12px;
        left: 12px;
        user-select: none;
        pointer-events: none;
        display: none;
    }

    @media (hover: hover) and (pointer: fine) {
        .zoom-control-text {
            display: block;
        }
    }

    footer {
        width: 100%;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
</style>
